{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./.tmp-tests",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2022",
    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  "include": [
    "lib/project-options.ts",
    "lib/project-paths.ts",
    "lib/manual-state.ts",
    "lib/standalone/**/*.ts",
    "lib/roadmap/**/*.ts",
    "app/api/projects/**/*.ts",
    "app/api/roadmaps/**/*.ts",
    "app/api/discover/**/*.ts",
    "app/api/context/**/*.ts",
    "app/api/status/**/*.ts",
    "tests/**/*.ts",
    "tests/**/*.d.ts"
  ],
  "exclude": []
}
